<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cardview"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/label_total_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Credit Amount =  "
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_total_credit_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/label_total_credit"
        android:hint="Total Credit Amount"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_tally_formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_total_credit"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_tally_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Tally Amount = "
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_tally_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Total + Digital Total"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
