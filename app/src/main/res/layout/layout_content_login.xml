<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Sign In"
            android:textColor="@color/colorHeading"
            android:textSize="@dimen/textsize_18"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinner_select_language"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview_sign_in"
            android:layout_marginTop="30dp"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_3"
            android:paddingBottom="5dp" />


        <EditText
            android:id="@+id/edittext_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_select_language"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@null"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/padding_3"
            android:paddingStart="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_3"
            android:textColorHint="@color/colorButton1"
            android:textSize="15sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_viewline_height"
            android:layout_below="@+id/edittext_username"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@color/colorButton1" />

        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/margin_10"
            android:padding="@dimen/padding_5">


            <EditText
                android:id="@+id/edittext_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:background="@null"
                android:hint="Password"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/padding_2"
                android:textColorHint="@color/colorButton1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageview_show_hide_pass"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_5"
                android:src="@drawable/hide" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_viewline_height"
                android:layout_below="@+id/edittext_password1"
                android:background="@color/colorButton1" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_password"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_circle"
            android:padding="@dimen/padding_5"
            android:text="Login"
            android:textAllCaps="true"
            android:textColor="@color/colorPlainWhite"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textview_forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30"
            android:text="Forgot Password"
            android:textColor="@color/colorBlack" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>