<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_parent_pr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar_inventory"
            layout="@layout/layout_custom_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textview_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date : "
                    android:textColor="@color/colorHint"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_time_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time : "
                    android:textColor="@color/colorHint"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textview_tanker_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanker Number"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edittext_tanker_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Tanker Number"
                        android:inputType="textCapCharacters"
                        android:textSize="13sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext_bg">

                    <Spinner
                        android:id="@+id/spinner_select_tank_ui"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textview_selected_tank"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="Selected Tank :"
                        android:textColor="@color/colorHeading"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/label_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_product_ui"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="Product"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_all_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_before_dip_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="Pre Stock Decantation"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_before_dip_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Pre Dip Reading"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/label_quantity_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="Quantity Decantation"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_pre_water_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Pre Water Dip Scale"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_pre_water_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Pre Water Dip Stock"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittext_before_dip_stock_reading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Pre Stock Decant"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_before_dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Pre Dip Reading"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_quantity_ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Quantity"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_pre_water_scale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Pre Water Scale"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_pre_water_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Pre Water Stock"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorToolBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/label_recieved_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Received Quantity"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_density_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Density on Invoice"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_density_recorded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Density Recorded"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_product_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Product Cost"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_invoice_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Invoice Number"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_invoice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Invoice Date"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edittext_received_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Received Quantity"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_density_invoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Density"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_density_recorded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Density Recorded"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_product_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Product Cost"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_invoice_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Invoice Number"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textview_invoice_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="0.8"
                            android:hint="Select Date"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/imageview_select_date_in"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:padding="5dp"
                            android:src="@drawable/calendar" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorToolBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/label_after_dip_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Post Stock Decantation"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_after_dip_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Post Dip Reading"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/label_post_water_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Post Water Dip Scale"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_post_water_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Post Water Dip Stock"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edittext_after_dip_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Post Stock"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_after_dip_read"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Post Dip Reading"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_post_water_scale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Post Water Scale"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/edittext_post_water_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Post Water Stock"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_all_units"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:elevation="100dp"
                android:ellipsize="middle"
                android:gravity="center"
                android:padding="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="8dp"
                android:text="SUBMIT"
                android:textColor="@color/colorPlainWhite"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/colorBlack"
                app:strokeColor="@color/colorZencon" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_note_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Note : You can't edit any values after activity completion. "
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>