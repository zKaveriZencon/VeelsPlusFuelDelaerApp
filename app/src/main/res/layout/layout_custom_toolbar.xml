<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/imageview_back_arrow"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:foregroundGravity="center_horizontal"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:id="@+id/textview_page_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/imageview_back_arrow"
                android:text="Title"
                android:textColor="@color/colorPlainWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--  <ImageView
                  android:id="@+id/imageview_search"
                  android:layout_width="20dp"
                  android:layout_height="30dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="10dp"
                  android:layout_toStartOf="@+id/imageview_qr"
                  android:src="@mipmap/ic_launcher"
                  android:visibility="gone" />-->
            <ImageView
                android:id="@+id/imageview_add_more"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/imageview_qr"
                android:src="@drawable/plus"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_qr"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toLeftOf="@+id/imageview_goto_home"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_goto_home"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/home"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_refresh"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/imageview_qr"
                android:src="@drawable/refresh"
                android:visibility="gone" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_select_product"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:text="Select Product"
                android:textColor="@color/colorPlainWhite"
                android:visibility="gone"
                app:chipBackgroundColor="@color/colorZencon"
                app:chipStrokeColor="@color/colorPlainWhite"
                app:chipStrokeWidth="1dp" />

            <ImageView
                android:id="@+id/imageview_search_refuel"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/imageview_refresh"
                android:src="@drawable/search_white"
                android:visibility="gone" />
            <!-- <Spinner
                 android:id="@+id/spinner_select_corp"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="10dp"
                 android:textSize="15sp"
                 android:layout_alignParentEnd="true"/>-->
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>
