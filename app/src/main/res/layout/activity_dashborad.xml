<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_home_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:text="Company Name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1.3"
                android:padding="5dp"
                android:text="Company Name"
                android:textColor="@color/colorTextValue"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_owner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:text="Owner Name"
                android:textColor="@color/colorTextValue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_owner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="5dp"
                android:text="Owner Name"
                android:textColor="@color/colorHeading"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:text="Oil Brand"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="5dp"
                android:text="Oil Brand"
                android:textColor="@color/colorTextValue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/layout_parent_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_dashoboard_menu"
                android:orientation="vertical"
                android:padding="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorZencon">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tv_manager_menu_title"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@color/colorZencon"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconCheckable="true"
                            app:endIconDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
                            app:endIconMode="custom"
                            app:endIconTint="@color/colorPlainWhite">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_menu_title_manager"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_margin="1dp"
                                android:background="@color/colorZencon"
                                android:editable="false"
                                android:focusable="true"
                                android:gravity="center_vertical"
                                android:paddingTop="-1dp"
                                android:paddingBottom="-1dp"
                                android:text="Manager"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPlainWhite"
                                android:textSize="15sp"
                                android:textStyle="bold"

                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/expandableLayout_manager_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_manager_menu_title"
                            android:background="@color/colorPlainWhite"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/layout_submenu_icons_manager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <ImageView
                                    android:id="@+id/iv_mitem_mg_refuel"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/fuel" />

                                <ImageView
                                    android:id="@+id/iv_mitem_mg_oplist"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/team" />

                                <ImageView
                                    android:id="@+id/iv_mitem_inventory"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/inventory" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_titles_refuel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="3">


                                <TextView
                                    android:id="@+id/tv_mitem_mg_refuel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Credit Entry"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_mg_oplist"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Operator List"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_inventory"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Decantation"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_icons_manager2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <ImageView
                                    android:id="@+id/iv_mitem_mg_dailystock"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/notepad" />

                                <ImageView
                                    android:id="@+id/iv_mitem_mg_price"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/fuelprice" />

                                <ImageView
                                    android:id="@+id/iv_mitem_mg_mappedacc"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/mapped" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_titles_mg2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="3">


                                <TextView
                                    android:id="@+id/tv_mitem_mg_dailystock"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Daily Stock Reading"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_mg_fuelprice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Set Fuel Price"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_mg_mappedacc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Mapped Accounts"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_icons_manager3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="3">


                                <ImageView
                                    android:id="@+id/iv_mitem_mg_fuel_expense"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@mipmap/ic_launcher" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_titles_mg3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:visibility="gone"
                                android:weightSum="3">


                                <TextView
                                    android:id="@+id/tv_mitem_mg_fuel_expense"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Fuel Expense"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_parent_operator_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_dashoboard_menu"
                android:orientation="vertical"
                android:padding="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tv_operator_menu_title"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@color/colorZencon"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconCheckable="true"
                            app:endIconDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
                            app:endIconMode="custom"
                            app:endIconTint="@color/colorPlainWhite">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_menu_title_operator"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_margin="1dp"
                                android:background="@color/colorZencon"
                                android:editable="false"
                                android:focusable="false"
                                android:paddingTop="-1dp"
                                android:paddingBottom="-1dp"
                                android:text="Operator"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPlainWhite"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/expandableLayout_operator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_operator_menu_title"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/layout_submenu_icons_operator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <ImageView
                                    android:id="@+id/iv_mitem_daily_work"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/list" />

                                <ImageView
                                    android:id="@+id/iv_mitem_op_refuel_list"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/fuel" />

                                <ImageView
                                    android:id="@+id/iv_mitem_earning_report"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/rupee" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_titles_operator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="3">


                                <TextView
                                    android:id="@+id/tv_mitem_daily_work"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Daily Activity"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_refuel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Credit Entry"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_earning_report"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Sales"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_parent_reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_dashoboard_menu"
                android:orientation="vertical"
                android:padding="1dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tv_reports_menu_title"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@color/colorZencon"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconCheckable="true"
                            app:endIconDrawable="@drawable/ic_baseline_keyboard_arrow_down_24"
                            app:endIconMode="custom"
                            app:endIconTint="@color/colorPlainWhite">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_menu_title_reports"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_margin="1dp"
                                android:background="@color/colorZencon"
                                android:editable="false"
                                android:focusable="false"
                                android:paddingTop="-1dp"
                                android:paddingBottom="-1dp"
                                android:text="Reports"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPlainWhite"
                                android:textSize="15sp"
                                android:textStyle="bold"

                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/expandableLayout_reports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_reports_menu_title"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/layout_submenu_icons_reports"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/iv_mitem_reports"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/reports" />

                                <ImageView
                                    android:id="@+id/iv_mitem_reports_second"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:src="@mipmap/ic_launcher"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/iv_mitem_reports_third"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="1"
                                    android:src="@mipmap/ic_launcher"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_submenu_titles_reports"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tv_mitem_reports"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Reports"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_mitem_reports_second"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Second Menu"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/tv_mitem_reports_third"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Third Menu"
                                    android:visibility="invisible" />


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Shimmer Test"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Version 1.0.23 Production"
            android:textColor="@color/colorHeading"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>